.row
  %center
    %h1 Your Reviews
  .col-lg-3
  .col-lg-6
    %br
    .top
      - if current_user
        = link_to 'New Review', new_review_path, class: "btn btn-info btn-xs btn-block"

    %br
    .middle
      %tbody
        - @reviews.each do |review|
          .middlee
            ="Name:"
            = review.name
            ="Group:"
            = review.group_id
            ="Content:"
            = review.content
            = link_to 'Show', review




