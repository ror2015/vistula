.row
  %center
    %h1 All Reviews
  .col-lg-3
  .col-lg-6
    %br
    .top
      = link_to 'New Review', new_review_path, class: "btn btn-info btn-xs btn-block"

    %br
    .middle
      %tbody
        - @reviews.each do |review|
          .middlee
            ="Name:"
            = review.name
            ="Group:"
            = review.group_id
            ="Content:"
            = review.content
            = review.user_id
            = link_to 'Show', review
            = link_to 'Edit', edit_review_path(review)
            = link_to 'Destroy', review, :method => :delete, :data => { :confirm => 'Are you sure?' }






